{% extends 'base.html.twig' %}

{% block title %}App:book:entries{% endblock %}

{% block body %}
      <div class='row'>
        <div class="col-md-12">
          <h1>{{ pageTitle }}</h1>
        </div>
      </div>
        <div class="row">
            <div class="col-sm-12 blog-main">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form) }}
                    <div class="col-md-12">
                        <div class="form-group col-md-4">
                            {{ form_row(form.bookID) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.bookTitle) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.bookDescription) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.bookCover) }}
                        </div>
                         <div class="form-group col-md-12">
                            {{ form_row(form.arrAuthor) }}
                        </div>
                           <div class="form-group col-md-4">
                            {{ form_row(form.bookType) }}
                        </div>
                        <div class="form-group col-md-4 pull-right">
                            {{ form_widget(form.create) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
{% endblock %}