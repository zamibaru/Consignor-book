{% extends 'base.html.twig' %}

{% block title %}App:book:entries{% endblock %}

{% block body %}
      <div class='row'>
        <div class="col-md-12">
          <h1>{{ pageTitle }}</h1>
        </div>
      </div>
        <div class="row">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Book Title</th>
                  <th scope="col">Author</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
              <tbody>
              {% for book in bookList %}
                <tr>
                  <td>{{ book.bookTitle }}</td>
                  <td>
                        <ul> 
                                {% for author in book.arrAuthor %} 
                                    <li>{{ author.authorFirstName }} - {{ author.authorLastName }} </li>
                                {% endfor %} 
                        </ul>
                  </td>
                  <td><a href="{{ path('delete_book', {'id': book.bookID }) }}"><button type="button" class="btn btn-outline-danger">Delete</button></a></td>
                </tr>
               
                {% else %}
                 <tr>
                    No entries available
                 </tr>
                {% endfor %}
              </tbody>
            </table>
        </div>
{% endblock %}